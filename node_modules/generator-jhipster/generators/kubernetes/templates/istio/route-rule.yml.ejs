apiVersion: config.istio.io/v1alpha2
kind: RouteRule
metadata:
  name: <%= app.baseName.toLowerCase() %>-rr
  namespace: <%= kubernetesNamespace %>
spec:
  destination:
    namespace: <%= kubernetesNamespace %>
    name: <%= app.baseName.toLowerCase() %>
  precedence: 1
  route:
  - labels:
      version: "1.0"
    weight: 100
  httpReqRetries:
    simpleRetry:
      perTryTimeout: 2s
      attempts: 3
